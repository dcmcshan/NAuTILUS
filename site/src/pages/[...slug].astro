---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';
import '../styles/global.css';

const base = import.meta.env.BASE_URL;
const docs = await getCollection('docs');

export async function getStaticPaths() {
  return docs.map((doc) => ({
    params: { slug: doc.slug },
    props: { doc },
  }));
}

const { doc } = Astro.props;
const { Content } = await doc.render();
const title = doc.data?.title ?? doc.slug.replace(/\d+-/, '').replace(/-/g, ' ');
---

<BaseLayout title={title} description="">
  <Header />
  <main class="doc-page">
    <div class="container">
      <article class="doc-content">
        <Content />
      </article>
      <a href={base ? `${base}/` : '/'} class="back">‚Üê Proposal index</a>
    </div>
  </main>
  <Footer />
</BaseLayout>

<style>
  .doc-page {
    padding: 2rem 0 4rem;
  }
  .container {
    max-width: 720px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  .doc-content {
    font-size: 1rem;
    line-height: 1.7;
  }
  .doc-content :global(h1) {
    font-size: 1.75rem;
    margin: 0 0 1rem;
  }
  .doc-content :global(h2) {
    font-size: 1.25rem;
    margin: 2rem 0 0.75rem;
    padding-bottom: 0.25rem;
    border-bottom: 1px solid var(--border);
  }
  .doc-content :global(h3) { font-size: 1.05rem; margin: 1.25rem 0 0.5rem; }
  .doc-content :global(p) { margin: 0 0 1rem; }
  .doc-content :global(ul), .doc-content :global(ol) {
    margin: 0 0 1rem;
    padding-left: 1.5rem;
  }
  .doc-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1rem 0;
    font-size: 0.95rem;
  }
  .doc-content :global(th),
  .doc-content :global(td) {
    border: 1px solid var(--border);
    padding: 0.5rem 0.75rem;
    text-align: left;
  }
  .doc-content :global(th) { background: var(--muted); }
  .doc-content :global(hr) { border: none; border-top: 1px solid var(--border); margin: 2rem 0; }
  .doc-content :global(pre) {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 1rem;
    overflow-x: auto;
    font-size: 0.85rem;
  }
  .doc-content :global(code) {
    font-family: var(--font-mono);
    font-size: 0.9em;
    background: var(--muted);
    padding: 0.15em 0.4em;
    border-radius: 4px;
  }
  .doc-content :global(pre code) { background: none; padding: 0; }
  .back {
    display: inline-block;
    margin-top: 2rem;
    color: var(--accent);
    font-weight: 500;
  }
  .back:hover { text-decoration: none; }
</style>

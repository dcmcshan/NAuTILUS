---
const base = import.meta.env.BASE_URL;
---
<header class="site-header">
  <div class="container">
    <a href={base ? `${base}/` : '/'} class="logo">
      <span class="logo-mark">‚óê</span>
      <span class="logo-text">NAuTILUS</span>
    </a>
    <nav class="nav">
      <a href={base ? `${base}/` : '/'}>Proposal</a>
      <a href={`${base}/results/`}>Results</a>
      <a href="https://terpedia.com" target="_blank" rel="noopener">Terpedia</a>
    </nav>
  </div>
</header>

<style>
  .site-header {
    border-bottom: 1px solid var(--border);
    padding: 1rem 0;
    position: sticky;
    top: 0;
    background: rgba(10, 14, 23, 0.9);
    backdrop-filter: blur(8px);
    z-index: 10;
  }
  .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    max-width: 960px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  .logo {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text);
    font-weight: 700;
    font-size: 1.25rem;
    letter-spacing: 0.02em;
  }
  .logo:hover { color: var(--accent); text-decoration: none; }
  .logo-mark {
    color: var(--accent);
    font-size: 1.5rem;
    line-height: 1;
  }
  .nav {
    display: flex;
    gap: 1.5rem;
  }
  .nav a {
    color: var(--text-muted);
    font-size: 0.95rem;
  }
  .nav a:hover { color: var(--accent); }
</style>

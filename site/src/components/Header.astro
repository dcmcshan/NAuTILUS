---
const base = import.meta.env.BASE_URL;
const logoSrc = base ? `${base}/nautilus-logo.png` : '/nautilus-logo.png';
---
<header class="site-header">
  <div class="container">
    <a href={base ? `${base}/` : '/'} class="logo">
      <img src={logoSrc} alt="NAuTILUS" width="140" height="40" class="logo-img" />
    </a>
    <nav class="nav">
      <a href={base ? `${base}/` : '/'}>Proposal</a>
      <a href={`${base}/results/`}>Results</a>
      <a href="https://terpedia.com" target="_blank" rel="noopener">Terpedia</a>
    </nav>
  </div>
</header>

<style>
  .site-header {
    border-bottom: 1px solid var(--border);
    padding: 1rem 0;
    position: sticky;
    top: 0;
    background: rgba(10, 14, 23, 0.9);
    backdrop-filter: blur(8px);
    z-index: 10;
  }
  .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    max-width: 960px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  .logo {
    display: inline-flex;
    align-items: center;
    color: var(--text);
  }
  .logo:hover { text-decoration: none; opacity: 0.9; }
  .logo-img {
    height: 40px;
    width: auto;
    display: block;
    object-fit: contain;
  }
  .nav {
    display: flex;
    gap: 1.5rem;
  }
  .nav a {
    color: var(--text-muted);
    font-size: 0.95rem;
  }
  .nav a:hover { color: var(--accent); }
</style>
